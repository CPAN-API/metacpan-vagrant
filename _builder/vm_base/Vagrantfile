Vagrant::Config.run do |config|

  config.vm.box_url = "http://mcvbox.s3-website-us-east-1.amazonaws.com/mcwheezy.box"
  config.vm.box = "mcbasebuilder"

  # currently the puppet setup is designed to be bootstrapped
  # by these shell scripts rather than simply applied

  config.vm.provision :shell, :path => 'Vagrant/provision.sh'

  config.vm.share_folder('/etc/puppet', '/etc/puppet', '../../../metacpan/metacpan-puppet')
end
